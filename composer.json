{
    "name": "getjohn/module-composer-vendor-checker",
    "description": "Composer plugin to check installed packages for available updates",
    "type": "composer-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "John",
            "email": "john@getjohn.co.uk"
        }
    ],
    "require": {
        "php": ">=7.4",
        "guzzlehttp/guzzle": "^6.5|^7.0",
        "ext-json": "*",
        "composer-plugin-api": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5|^10.0",
        "composer/composer": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "GetJohn\\VendorChecker\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GetJohn\\VendorChecker\\Tests\\": "tests/"
        }
    },
    "extra": {
        "class": "GetJohn\\VendorChecker\\ComposerPlugin"
    }
}
